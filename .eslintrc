{
  "extends": "pagarme-react",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      "./stories/**/*.js"
    ],
    "react/jsx-filename-extension": 0,
    "react/jsx-no-bind": [
      2,
      {
        "ignoreRefs": false,
        "allowArrowFunctions": false,
        "allowFunctions": false,
        "allowBind": false
      }
    ]
  }
}
