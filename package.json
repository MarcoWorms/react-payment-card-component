{
  "name": "react-payment-card-component",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@storybook/react": "3.2.14",
    "@storybook/storybook-deployer": "2.0.0",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "css-loader": "0.28.4",
    "enzyme": "3.1.1",
    "enzyme-adapter-react-16": "1.0.4",
    "eslint": "4.10.0",
    "eslint-config-pagarme-react": "1.1.0",
    "eslint-config-react-app": "2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "file-loader": "1.1.5",
    "gh-pages": "1.0.0",
    "jest": "20.0.4",
    "postcss-cssnext": "3.0.2",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-import": "11.0.0",
    "postcss-loader": "2.0.8",
    "postcss-mixins": "6.2.0",
    "postcss-sass-each": "0.1.0",
    "postcss-url": "7.1.2",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dev-utils": "4.2.1",
    "react-dom": "16.0.0",
    "style-loader": "0.19.0",
    "stylelint": "8.2.0",
    "stylelint-config-pagarme-react": "1.1.0",
    "url-loader": "0.6.2",
    "webpack": "3.8.1"
  },
  "scripts": {
    "lint": "eslint './{src,stories}/**/*.js' && stylelint './{src,stories}/**/*.css'",
    "test": "node config/jest/test.js --env=jsdom",
    "storybook": "start-storybook -p 6006",
    "preview": "storybook-to-ghpages"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "pagarme-react",
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "comma-dangle": ["error", "always-multiline"],
      "react/jsx-filename-extension": 0,
      "react/jsx-no-bind": [
        2,
        {
          "ignoreRefs": false,
          "allowArrowFunctions": false,
          "allowFunctions": false,
          "allowBind": false
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-pagarme-react",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "each",
            "mixin",
            "define-mixin"
          ]
        }
      ]
    }
  }
}
